# ===================================================================
# API Documentation Generator - Environment Configuration
# ===================================================================
# Copy this file to .env and update the values for your environment
# All environment variables are optional and have defaults
# Variables with API_DOC_GEN_ prefix are automatically mapped to config
# ===================================================================

# ===================================================================
# CORE APPLICATION SETTINGS
# ===================================================================

# Node.js Environment
NODE_ENV=development

# Application Server
PORT=3000
HOST=0.0.0.0

# ===================================================================
# AI SERVICE CONFIGURATION
# ===================================================================

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_ORGANIZATION=your-org-id
OPENAI_PROJECT=your-project-id
OPENAI_BASE_URL=https://api.openai.com/v1

# AI Provider Settings (mapped to API_DOC_GEN_AI_*)
API_DOC_GEN_AI_PROVIDER=openai
API_DOC_GEN_AI_MODEL=gpt-4
API_DOC_GEN_AI_ENABLED=true
API_DOC_GEN_AI_MAX_TOKENS=4000
API_DOC_GEN_AI_TEMPERATURE=0.3
API_DOC_GEN_AI_TIMEOUT=30000
API_DOC_GEN_AI_RETRY_COUNT=3
API_DOC_GEN_AI_BATCH_SIZE=10

# AI Cost Limits
API_DOC_GEN_AI_DAILY_LIMIT=100.00
API_DOC_GEN_AI_MONTHLY_LIMIT=1000.00
API_DOC_GEN_AI_PER_REQUEST_LIMIT=5.00

# ===================================================================
# PROJECT CONFIGURATION
# ===================================================================

# Project Metadata
API_DOC_GEN_PROJECT_NAME=API Documentation Generator
API_DOC_GEN_PROJECT_VERSION=1.0.0
API_DOC_GEN_PROJECT_DESCRIPTION=AI-powered API documentation generator
API_DOC_GEN_PROJECT_ID=api-doc-generator

# User Settings
API_DOC_GEN_USER_ID=default-user
API_DOC_GEN_CREATED_BY=system

# ===================================================================
# PROCESSING & PERFORMANCE
# ===================================================================

# Processing Configuration
API_DOC_GEN_MAX_CONCURRENCY=4
API_DOC_GEN_MAX_WORKERS=8
API_DOC_GEN_TIMEOUT=300000
API_DOC_GEN_ENABLE_PARALLEL=true
API_DOC_GEN_CONCURRENT=true

# Performance Settings
API_DOC_GEN_MAX_FILE_SIZE=50MB
API_DOC_GEN_RETRY_COUNT=3
API_DOC_GEN_RATE_LIMIT_MAX=100
API_DOC_GEN_RATE_LIMIT_WINDOW=60000

# ===================================================================
# CACHING CONFIGURATION
# ===================================================================

# Cache Settings
API_DOC_GEN_CACHE_ENABLED=true
CACHE_ENABLED=true
CACHE_DIRECTORY=./cache
API_DOC_GEN_CACHE_TTL=300000
API_DOC_GEN_CACHE_SIZE=1000
API_DOC_GEN_CACHE_MAX_SIZE=10000
API_DOC_GEN_CACHE_CLEANUP_INTERVAL=60000

# Cache Layers
API_DOC_GEN_MEMORY_CACHE_SIZE=500
API_DOC_GEN_DISK_CACHE_SIZE=5000
API_DOC_GEN_DISTRIBUTED_CACHE_ENABLED=false

# ===================================================================
# OUTPUT CONFIGURATION
# ===================================================================

# Output Settings
API_DOC_GEN_OUTPUT_DIR=./docs
API_DOC_GEN_OUTPUT_FORMAT=markdown
API_DOC_GEN_THEME=default
API_DOC_GEN_INCLUDE_PRIVATE=false
API_DOC_GEN_INCLUDE_DEPRECATED=true
API_DOC_GEN_INCLUDE_EXAMPLES=true
API_DOC_GEN_MINIFY_OUTPUT=false

# Theme Configuration
API_DOC_GEN_DEFAULT_THEME=light
API_DOC_GEN_CUSTOM_THEMES=corporate,minimal
API_DOC_GEN_ENABLE_DARK_MODE=true

# ===================================================================
# LOGGING & MONITORING
# ===================================================================

# Logging Configuration
API_DOC_GEN_LOG_LEVEL=info
LOG_LEVEL=info
API_DOC_GEN_LOG_FORMAT=json
API_DOC_GEN_LOG_FILE=./logs/app.log
API_DOC_GEN_ENABLE_FILE_LOGGING=true
API_DOC_GEN_LOG_MAX_SIZE=10MB
API_DOC_GEN_LOG_MAX_FILES=5

# Debug Settings
API_DOC_GEN_DEBUG_MODE=false
API_DOC_GEN_VERBOSE_LOGGING=false
API_DOC_GEN_ENABLE_STACK_TRACES=true

# ===================================================================
# SECURITY CONFIGURATION
# ===================================================================

# Security Settings
API_DOC_GEN_SECURITY_LEVEL=medium
API_DOC_GEN_ACCESS_CONTROL=authenticated
API_DOC_GEN_ENABLE_RATE_LIMITING=true
API_DOC_GEN_ENABLE_CORS=true
API_DOC_GEN_ENABLE_COMPRESSION=true

# Authentication
API_DOC_GEN_AUTH_ENABLED=false
API_DOC_GEN_AUTH_TYPE=jwt
API_DOC_GEN_JWT_SECRET=your-jwt-secret-here
API_DOC_GEN_API_KEYS=key1,key2,key3

# SSL Configuration
API_DOC_GEN_SSL_ENABLED=false
API_DOC_GEN_SSL_KEY_PATH=./ssl/private.key
API_DOC_GEN_SSL_CERT_PATH=./ssl/certificate.crt

# ===================================================================
# PARSER CONFIGURATION
# ===================================================================

# Parser Settings
API_DOC_GEN_ENABLE_OPENAPI=true
API_DOC_GEN_ENABLE_JSDOC=true
API_DOC_GEN_ENABLE_PYTHON_DOCSTRING=true
API_DOC_GEN_ENABLE_GO_DOC=true
API_DOC_GEN_ENABLE_GRAPHQL=true

# Parser Options
API_DOC_GEN_STRICT_MODE=false
API_DOC_GEN_IGNORE_ERRORS=false
API_DOC_GEN_VALIDATE_SCHEMAS=true
API_DOC_GEN_ENCODING=utf8

# ===================================================================
# INTEGRATION SETTINGS
# ===================================================================

# CI/CD Integration
API_DOC_GEN_CICD_ENABLED=false
API_DOC_GEN_CICD_PLATFORM=github-actions
API_DOC_GEN_AUTO_COMMIT=false
API_DOC_GEN_COMMIT_MESSAGE=Update API documentation

# Version Control
API_DOC_GEN_VCS_PROVIDER=git
API_DOC_GEN_VCS_REPOSITORY=https://github.com/your-org/your-repo
API_DOC_GEN_VCS_BRANCH=main

# Notifications
API_DOC_GEN_SLACK_WEBHOOK=https://hooks.slack.com/your-webhook
API_DOC_GEN_EMAIL_NOTIFICATIONS=admin@yourdomain.com
API_DOC_GEN_WEBHOOK_URL=https://your-webhook-endpoint.com

# ===================================================================
# DEVELOPMENT & TESTING
# ===================================================================

# Development Settings
API_DOC_GEN_ENVIRONMENT=development
API_DOC_GEN_ENABLE_HOT_RELOAD=true
API_DOC_GEN_ENABLE_WATCH_MODE=true
API_DOC_GEN_SOURCE_MAPS=true

# Testing Configuration
API_DOC_GEN_TEST_MODE=false
API_DOC_GEN_MOCK_AI_RESPONSES=false
API_DOC_GEN_TEST_DATA_PATH=./test-data

# Demo Settings
API_DOC_GEN_DEMO_MODE=false
API_DOC_GEN_DEMO_DATA_PATH=./demo-data
API_DOC_GEN_ENABLE_ALL_FEATURES=false

# ===================================================================
# EXTERNAL SERVICES
# ===================================================================

# Database (if needed for caching/storage)
DATABASE_URL=sqlite://./data/cache.db
REDIS_URL=redis://localhost:6379

# Monitoring Services
SENTRY_DSN=your-sentry-dsn-here
NEW_RELIC_LICENSE_KEY=your-new-relic-key
DATADOG_API_KEY=your-datadog-key

# Cloud Storage (for distributed caching)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-s3-bucket

# ===================================================================
# ADVANCED CONFIGURATION
# ===================================================================

# Memory Management
API_DOC_GEN_MAX_MEMORY_USAGE=2GB
API_DOC_GEN_GARBAGE_COLLECTION_INTERVAL=30000
API_DOC_GEN_MEMORY_THRESHOLD=80

# Custom Extensions
API_DOC_GEN_CUSTOM_PLUGINS=plugin1,plugin2
API_DOC_GEN_PLUGIN_DIRECTORY=./plugins
API_DOC_GEN_ENABLE_CUSTOM_THEMES=true

# Experimental Features
API_DOC_GEN_EXPERIMENTAL_FEATURES=false
API_DOC_GEN_BETA_FEATURES=false
API_DOC_GEN_FEATURE_FLAGS=feature1:true,feature2:false

# ===================================================================
# LEGACY COMPATIBILITY
# ===================================================================

# Backwards compatibility with older config formats
OPENAI_API_KEY_LEGACY=your-legacy-openai-key
AI_PROVIDER=openai
AI_MODEL=gpt-4
AI_ENABLED=true
CACHE_TTL=300000
OUTPUT_DIR=./docs
THEME=default

# ===================================================================
# END OF CONFIGURATION
# ===================================================================